<?xml version="1.0" encoding="UTF-8"?>
<ViewCell
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="RetroGameGauntlet.PCL.Views.CustomViewCell">
    <ViewCell.View>
        <StackLayout
            Orientation="Vertical"
            Padding="20,8">
            <Label
                Text="{Binding Title}"
                FontFamily="{StaticResource monoFont}"
                FontSize="Micro">
            </Label>
            <Label
                Text="{Binding Description}"
                FontFamily="{StaticResource monoFont}"
                TextColor="Gray"
                FontSize="8">
            </Label>
        </StackLayout>
    </ViewCell.View>
</ViewCell>