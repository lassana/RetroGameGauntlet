<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="View.About.AboutPage"
	Title="About"
	Icon="ico_notepad.png">
	<ContentPage.Content>
		<AbsoluteLayout
			x:Name="absoluteLayout"
			Padding="0">
			<Label
				x:Name="forkLabel"
				BackgroundColor="Gray"
				TextColor="White"
				FontAttributes="Bold"
				Text="    Fork me on Github    "
				FontSize="Micro">
				<Label.GestureRecognizers>
					<TapGestureRecognizer
						Tapped="OnForkTapped" />
				</Label.GestureRecognizers>
			</Label>
			<StackLayout
				Orientation="Vertical"
				AbsoluteLayout.LayoutBounds=".5,0.5,-1,-1"
				AbsoluteLayout.LayoutFlags="PositionProportional">
				<Image
					WidthRequest="200"
					HeightRequest="200"
					BackgroundColor="#40000000"
					Aspect="AspectFill"
					x:Name="randomImage">
				</Image>
				<Label
					Text="Retro Game Gauntlet"
					Font="Press Start"
					FontSize="Micro"
					HorizontalTextAlignment="Center">
				</Label>
				<Label
					FontSize="Micro"
					Font="Press Start"
					HorizontalTextAlignment="Center"
					Text="1.0">
				</Label>
			</StackLayout>
		</AbsoluteLayout>
	</ContentPage.Content>
</ContentPage>